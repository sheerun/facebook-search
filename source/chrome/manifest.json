{
  "manifest_version": 2,

  "name": "Facebook Search",
  "description": "Filters Facebook group posts",
  "version": "0.1.1",

  "permissions": [
    "webNavigation",
    "tabs",
    "https://www.facebook.com/*",
    "http://www.facebook.com/*"
  ],

  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },

  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/*",
        "http://www.facebook.com/*"
      ],
      "js": ["facebook-search.js"]
    }
  ]
}
